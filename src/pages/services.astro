---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="fr">
  <head>
    <BaseHead
      title={`Services | ${SITE_TITLE}`}
      description="Nos services d'expertise fiscale et patrimoniale"
    />
  </head>
  <body class="bg-gray-50">
    <Header />
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">Nos Services</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Optimisation Fiscale -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">
            Optimisation Fiscale
          </h2>
          <p class="text-gray-600 mb-4">
            Optimisez votre situation fiscale en toute légalité grâce à nos
            stratégies personnalisées.
          </p>
          <ul class="list-disc list-inside text-gray-600">
            <li>Analyse fiscale approfondie</li>
            <li>Stratégies d'optimisation</li>
            <li>Suivi personnalisé</li>
          </ul>
        </div>

        <!-- Contrôle Fiscal -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">
            Contrôle Fiscal
          </h2>
          <p class="text-gray-600 mb-4">
            Un accompagnement expert pour gérer sereinement vos contrôles
            fiscaux.
          </p>
          <ul class="list-disc list-inside text-gray-600">
            <li>Préparation aux contrôles</li>
            <li>Assistance durant la procédure</li>
            <li>Négociation avec l'administration</li>
          </ul>
        </div>

        <!-- Contentieux -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">Contentieux</h2>
          <p class="text-gray-600 mb-4">
            Défense de vos intérêts dans les litiges fiscaux.
          </p>
          <ul class="list-disc list-inside text-gray-600">
            <li>Représentation juridique</li>
            <li>Médiation fiscale</li>
            <li>Résolution des litiges</li>
          </ul>
        </div>

        <!-- Conseil Patrimonial -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">
            Conseil Patrimonial
          </h2>
          <p class="text-gray-600 mb-4">
            Optimisez la gestion et la transmission de votre patrimoine.
          </p>
          <ul class="list-disc list-inside text-gray-600">
            <li>Stratégie patrimoniale</li>
            <li>Transmission d'entreprise</li>
            <li>Optimisation successorale</li>
          </ul>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
