---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Values from "../components/Values.astro";
import Services from "../components/Services.astro";
import Expertise from "../components/Expertise.astro";
import Temoignages from "../components/Temoignages.astro";
import Contact from "../components/Contact.astro";
import Cta from "../components/Cta.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

import "@/styles/globals.css";
---

<!doctype html>
<html lang="fr">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style is:global>
      @font-face {
        font-family: "Welcome";
        src:
          url("/fonts/atkinson-bold.woff") format("woff"),
          url("/fonts/atkinson-regular.woff") format("woff");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Welcome", sans-serif;
        font-weight: 600;
      }

      [data-animate] {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      }

      [data-animate="fade-in"].is-visible {
        opacity: 1;
        transform: translateY(0);
      }

      [data-animate="slide-up"] {
        transform: translateY(40px);
      }

      [data-animate="slide-up"].is-visible {
        opacity: 1;
        transform: translateY(0);
      }

      [data-animate="slide-left"] {
        opacity: 0;
        transform: translateX(-50px);
      }

      [data-animate="slide-left"].is-visible {
        opacity: 1;
        transform: translateX(0);
      }

      [data-animate="slide-right"] {
        opacity: 0;
        transform: translateX(50px);
      }

      [data-animate="slide-right"].is-visible {
        opacity: 1;
        transform: translateX(0);
      }

      [data-animate="zoom-in"] {
        opacity: 0;
        transform: scale(0.95);
      }

      [data-animate="zoom-in"].is-visible {
        opacity: 1;
        transform: scale(1);
      }

      .scale-hover {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .scale-hover:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
      }

      .glow-hover {
        transition: all 0.3s ease;
      }

      .glow-hover:hover {
        box-shadow: 0 0 15px rgba(59, 130, 246, 0.5);
      }

      .gradient-animate {
        background: linear-gradient(120deg, #1e40af, #3b82f6, #60a5fa);
        background-size: 200% 200%;
        animation: gradientMove 8s ease infinite;
      }

      @keyframes gradientMove {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      .pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
      }

      @keyframes pulse {
        0%,
        100% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.05);
        }
      }

      .welcome-font {
        font-family: "Welcome", sans-serif;
        font-weight: 600;
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <Header />
    <main class="w-full">
      <div class="max-w-[90%] mx-auto">
        <Hero />
        <Values />
        <Services />
        <Expertise />
        <Temoignages />
        <Contact />
        <Cta />
      </div>
    </main>
    <Footer />
    <script>
      function initAnimations() {
        const options = {
          root: null,
          rootMargin: "0px",
          threshold: 0.1,
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("is-visible");
            }
          });
        }, options);

        document.querySelectorAll("[data-animate]").forEach((el) => {
          observer.observe(el);
        });
      }

      // S'assurer que le DOM est charg√©
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initAnimations);
      } else {
        initAnimations();
      }
    </script>
  </body>
</html>
