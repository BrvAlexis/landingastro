---
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
  CardDescription,
} from "@/components/ui/card";
import SectionDivider from "./SectionDivider.astro";
import SectionDecoration from "./SectionDecoration.astro";
---

<section class="relative py-24 bg-[#E7E8E9]" id="services">
  <SectionDivider
    variant="wave"
    position="top"
    color="white"
    bgColor="#E7E8E9"
  />
  <SectionDecoration
    variant="grid"
    position="top-left"
    color="hsl(var(--info))"
  />
  <SectionDecoration
    variant="lines"
    position="bottom-right"
    color="hsl(var(--primary))"
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16" data-animate="fade-in">
      <span
        class="inline-block px-3 py-1 text-sm font-medium text-primary-foreground bg-primary/20 rounded-full mb-4"
        >NOTRE EXPERTISE</span
      >
      <h2
        class="text-3xl font-extrabold text-gray-900 sm:text-4xl md:text-5xl welcome-font"
      >
        Nos Services
      </h2>
      <div class="w-24 h-1 bg-primary mx-auto my-6 rounded-full"></div>
      <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
        Des solutions fiscales adaptées à vos besoins spécifiques
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      <!-- Optimisation Fiscale -->
      <div data-animate="slide-up" style="transition-delay: 0.1s">
        <div class="relative group h-full">
          <div
            class="absolute inset-0 bg-primary rounded-xl opacity-75 blur-lg group-hover:opacity-100 transition duration-300 transform group-hover:scale-105"
          >
          </div>
          <Card
            client:load
            className="relative h-full bg-white hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
          >
            <div class="absolute -top-6 left-6">
              <div
                class="flex items-center justify-center w-12 h-12 bg-primary rounded-full text-primary-foreground shadow-lg"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                  ></path>
                </svg>
              </div>
            </div>
            <CardHeader>
              <CardTitle className="text-xl font-bold text-gray-900"
                >Optimisation Fiscale</CardTitle
              >
              <CardDescription className="text-gray-600">
                Optimisez votre situation fiscale en toute légalité grâce à nos
                stratégies personnalisées.
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Analyse fiscale approfondie</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Stratégies d'optimisation</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Suivi personnalisé</span>
                </li>
              </ul>
              <div class="mt-6 pt-4 border-t border-gray-100">
                <a
                  href="#contact"
                  class="inline-flex items-center text-info hover:text-info/80 transition-colors"
                >
                  En savoir plus
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 ml-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                  </svg>
                </a>
              </div>
            </CardContent>
          </Card>
        </div>
      </div>

      <!-- Contrôle Fiscal -->
      <div data-animate="slide-up" style="transition-delay: 0.2s">
        <div class="relative group h-full">
          <div
            class="absolute inset-0 bg-info rounded-xl opacity-75 blur-lg group-hover:opacity-100 transition duration-300 transform group-hover:scale-105"
          >
          </div>
          <Card
            client:load
            className="relative h-full bg-white hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
          >
            <div class="absolute -top-6 left-6">
              <div
                class="flex items-center justify-center w-12 h-12 bg-info rounded-full text-info-foreground shadow-lg"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  ></path>
                </svg>
              </div>
            </div>
            <CardHeader>
              <CardTitle className="text-xl font-bold text-gray-900"
                >Contrôle Fiscal</CardTitle
              >
              <CardDescription className="text-gray-600">
                Un accompagnement expert pour gérer sereinement vos contrôles
                fiscaux.
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Préparation aux contrôles</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Assistance durant la procédure</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Négociation avec l'administration</span>
                </li>
              </ul>
              <div class="mt-6 pt-4 border-t border-gray-100">
                <a
                  href="#contact"
                  class="inline-flex items-center text-info hover:text-info/80 transition-colors"
                >
                  En savoir plus
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 ml-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                  </svg>
                </a>
              </div>
            </CardContent>
          </Card>
        </div>
      </div>

      <!-- Contentieux -->
      <div data-animate="slide-up" style="transition-delay: 0.3s">
        <div class="relative group h-full">
          <div
            class="absolute inset-0 bg-warning rounded-xl opacity-75 blur-lg group-hover:opacity-100 transition duration-300 transform group-hover:scale-105"
          >
          </div>
          <Card
            client:load
            className="relative h-full bg-white hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
          >
            <div class="absolute -top-6 left-6">
              <div
                class="flex items-center justify-center w-12 h-12 bg-warning rounded-full text-warning-foreground shadow-lg"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"
                  ></path>
                </svg>
              </div>
            </div>
            <CardHeader>
              <CardTitle className="text-xl font-bold text-gray-900"
                >Contentieux</CardTitle
              >
              <CardDescription className="text-gray-600">
                Défense de vos intérêts dans les litiges fiscaux.
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Représentation juridique</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Médiation fiscale</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Résolution des litiges</span>
                </li>
              </ul>
              <div class="mt-6 pt-4 border-t border-gray-100">
                <a
                  href="#contact"
                  class="inline-flex items-center text-info hover:text-info/80 transition-colors"
                >
                  En savoir plus
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 ml-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                  </svg>
                </a>
              </div>
            </CardContent>
          </Card>
        </div>
      </div>

      <!-- Conseil Patrimonial -->
      <div
        data-animate="slide-up"
        style="transition-delay: 0.4s"
        class="lg:col-span-3 xl:col-span-1"
      >
        <div class="relative group h-full">
          <div
            class="absolute inset-0 bg-destructive rounded-xl opacity-75 blur-lg group-hover:opacity-100 transition duration-300 transform group-hover:scale-105"
          >
          </div>
          <Card
            client:load
            className="relative h-full bg-white hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
          >
            <div class="absolute -top-6 left-6">
              <div
                class="flex items-center justify-center w-12 h-12 bg-destructive rounded-full text-destructive-foreground shadow-lg"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
            </div>
            <CardHeader>
              <CardTitle className="text-xl font-bold text-gray-900"
                >Conseil Patrimonial</CardTitle
              >
              <CardDescription className="text-gray-600">
                Optimisez la gestion et la transmission de votre patrimoine.
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Stratégie patrimoniale</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Transmission d'entreprise</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-success mr-2 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Optimisation successorale</span>
                </li>
              </ul>
              <div class="mt-6 pt-4 border-t border-gray-100">
                <a
                  href="#contact"
                  class="inline-flex items-center text-info hover:text-info/80 transition-colors"
                >
                  En savoir plus
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 ml-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                  </svg>
                </a>
              </div>
            </CardContent>
          </Card>
        </div>
      </div>
    </div>

    <div
      class="mt-16 text-center"
      data-animate="fade-in"
      style="transition-delay: 0.5s"
    >
      <a
        href="#contact"
        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-primary to-info hover:from-primary/90 hover:to-info/90 shadow-md hover:shadow-lg transition-all duration-300"
      >
        <span>Demander un rendez-vous</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 ml-2"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>

  <SectionDivider
    variant="curve"
    position="bottom"
    color="white"
    bgColor="#E7E8E9"
  />
</section>
