---
import { Card, CardContent, CardTitle } from "@/components/ui/card";
import { TestimonialAvatar } from "./TestimonialAvatar";
import SectionDivider from "./SectionDivider.astro";
import SectionDecoration from "./SectionDecoration.astro";
---

<section class="relative py-24 bg-[#E7E8E9]" id="equipe">
  <SectionDivider
    variant="zigzag"
    position="top"
    color="white"
    bgColor="#E7E8E9"
  />
  <SectionDecoration
    variant="grid"
    position="top-right"
    color="hsl(var(--warning))"
  />
  <SectionDecoration
    variant="dots"
    position="bottom-left"
    color="hsl(var(--destructive))"
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16" data-animate="fade-in">
      <span
        class="inline-block px-3 py-1 text-sm font-medium text-primary-foreground bg-primary/20 rounded-full mb-4"
        >NOTRE CABINET</span
      >
      <h2
        class="text-3xl font-extrabold text-gray-900 sm:text-4xl md:text-5xl welcome-font"
      >
        Notre Équipe
      </h2>
      <div class="w-24 h-1 bg-primary mx-auto my-6 rounded-full"></div>
      <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
        Des avocats fiscalistes expérimentés à votre service
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-4xl mx-auto">
      <!-- Premier avocat -->
      <div data-animate="slide-up" style="transition-delay: 0.1s">
        <div class="relative group h-full">
          <div
            class="absolute inset-0 bg-gradient-to-r from-primary to-info rounded-xl opacity-75 blur-lg group-hover:opacity-100 transition duration-300 transform group-hover:scale-105"
          >
          </div>
          <Card
            client:load
            className="relative h-full bg-white hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden"
          >
            <div
              class="absolute top-0 left-0 w-full h-48 bg-gradient-to-r from-primary to-info rounded-t-lg"
            >
            </div>
            <div class="relative pt-6 px-6 flex flex-col items-center">
              <div
                class="h-32 w-32 rounded-full border-4 border-white shadow-lg overflow-hidden mt-4 mb-4"
              >
                <TestimonialAvatar
                  client:load
                  src="/yves&florence.webp"
                  alt="Maître Jean Dupont"
                  fallback="JD"
                  className="h-full w-full object-cover"
                />
              </div>
              <CardContent client:load className="text-center">
                <CardTitle
                  client:load
                  className="text-2xl font-bold text-gray-900 welcome-font"
                >
                  Maître Jean Dupont
                </CardTitle>
                <p class="text-info font-medium mb-4">
                  Avocat fiscaliste associé
                </p>
                <p class="text-gray-600 mb-6">
                  Spécialiste en fiscalité des entreprises et contentieux fiscal
                  avec plus de 15 ans d'expérience. Ancien conseiller au sein de
                  la Direction Générale des Finances Publiques.
                </p>
                <div
                  class="border-t border-gray-100 pt-4 flex justify-center space-x-4"
                >
                  <a
                    href="#"
                    class="text-gray-500 hover:text-info transition-colors"
                  >
                    <svg
                      class="h-5 w-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                      ></path>
                    </svg>
                  </a>
                  <a
                    href="mailto:jean.dupont@cabinet.fr"
                    class="text-gray-500 hover:text-info transition-colors"
                  >
                    <svg
                      class="h-5 w-5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                      ></path>
                      <path
                        d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                      ></path>
                    </svg>
                  </a>
                </div>
              </CardContent>
            </div>
          </Card>
        </div>
      </div>

      <!-- Deuxième avocat -->
      <div data-animate="slide-up" style="transition-delay: 0.2s">
        <div class="relative group h-full">
          <div
            class="absolute inset-0 bg-gradient-to-r from-primary to-info rounded-xl opacity-75 blur-lg group-hover:opacity-100 transition duration-300 transform group-hover:scale-105"
          >
          </div>
          <Card
            client:load
            className="relative h-full bg-white hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden"
          >
            <div
              class="absolute top-0 left-0 w-full h-48 bg-gradient-to-r from-primary to-info rounded-t-lg"
            >
            </div>
            <div class="relative pt-6 px-6 flex flex-col items-center">
              <div
                class="h-32 w-32 rounded-full border-4 border-white shadow-lg overflow-hidden mt-4 mb-4"
              >
                <TestimonialAvatar
                  client:load
                  src="/yves&florence.webp"
                  alt="Maître Sophie Martin"
                  fallback="SM"
                  className="h-full w-full object-cover"
                />
              </div>
              <CardContent client:load className="text-center">
                <CardTitle
                  client:load
                  className="text-2xl font-bold text-gray-900 welcome-font"
                >
                  Maître Sophie Martin
                </CardTitle>
                <p class="text-info font-medium mb-4">
                  Avocate fiscaliste associée
                </p>
                <p class="text-gray-600 mb-6">
                  Experte en fiscalité internationale et patrimoniale avec plus
                  de 12 ans d'expérience. Diplômée d'un Master en droit fiscal
                  international et ancienne collaboratrice d'un cabinet Big
                  Four.
                </p>
                <div
                  class="border-t border-gray-100 pt-4 flex justify-center space-x-4"
                >
                  <a
                    href="#"
                    class="text-gray-500 hover:text-info transition-colors"
                  >
                    <svg
                      class="h-5 w-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                      ></path>
                    </svg>
                  </a>
                  <a
                    href="mailto:sophie.martin@cabinet.fr"
                    class="text-gray-500 hover:text-info transition-colors"
                  >
                    <svg
                      class="h-5 w-5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                      ></path>
                      <path
                        d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                      ></path>
                    </svg>
                  </a>
                </div>
              </CardContent>
            </div>
          </Card>
        </div>
      </div>
    </div>

    <div
      class="mt-16 text-center"
      data-animate="fade-in"
      style="transition-delay: 0.3s"
    >
      <a
        href="#contact"
        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-primary to-info hover:from-primary/90 hover:to-info/90 shadow-md hover:shadow-lg transition-all duration-300"
      >
        <span>Prendre rendez-vous</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 ml-2"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>

  <SectionDivider
    variant="triangle"
    position="bottom"
    color="white"
    bgColor="#E7E8E9"
  />
</section>
